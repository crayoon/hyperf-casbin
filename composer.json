{
    "name": "crayoon/hyperf-casbin",
    "keywords": [
        "hyperf",
        "casbin",
        "permission",
        "access-control",
        "authorization",
        "rbac",
        "acl",
        "abac"
    ],
    "description": "An authorization library that supports access control models like ACL, RBAC, ABAC in hyperf. ",
    "authors": [
        {
            "name": "Donjan",
            "homepage": "https://github.com/donjan-deng",
            "role": "Developer"
        },
        {
            "name": "Thompson Crayoon",
            "homepage": "https://github.com/crayoon",
            "role": "Developer"
        }
    ],
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.0",
        "ext-swoole": ">=4.5",
        "hyperf/database": "~3.0.0",
        "hyperf/redis": "~3.0.0",
        "hyperf/process": "~3.0.0",
        "hyperf/db-connection": "~3.0.0",
        "hyperf/cache": "~3.0.0",
        "hyperf/utils": "~3.0.0",
        "hyperf/config": "~3.0.0",
        "hyperf/logger": "~3.0.0",
        "casbin/casbin": "~3.20",
        "hyperf/command": "~3.0.0",
        "casbin/psr3-bridge": "~1.3",
        "ext-redis": "*"
    },
    "require-dev": {
        "hyperf/testing": "~3.0.0",
        "mockery/mockery": "~1.4"
    },
    "autoload": {
        "psr-4": {
            "Donjan\\Casbin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Donjan\\Casbin\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always"
    },
    "extra": {
        "hyperf": {
            "config": "Donjan\\Casbin\\ConfigProvider"
        }
    }
}
